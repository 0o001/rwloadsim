. oltp-setup-env

echo This will drop all schemas used for the oltp workload.
printf 'Continue? (y/n) : '
read x
if test x$x != xy
then
  echo Not doing it
  exit 1
fi

if test x$1 = x-r
then
  rwloadsim -A 1 drop_schemas.rwl repos
else
  rwloadsim drop_schemas.rwl
fi
